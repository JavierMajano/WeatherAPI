<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Weather Data</title>
  <link rel="stylesheet" href="/poststyle.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>

<body>



  <% if(typeof weather !== 'undefined') { %>
  <div class="intro">


    <h1 class="header">Weather in <%=weather %>.</h1>
    <div class="col cloud">
      <i class="fas fa-cloud-sun fa-4x"></i>
    </div>
  </div>
  <% } %>
  <div class="box">


    <div class="container cont">
      <div class="row">

        <div class="col-md-6 mx-auto text-center  mt-5 p-5">


          <ul class=list-group>


            <% if(typeof temp !== 'undefined') { %>
            <li class="list-group-item">
              <h1> Temperture: <%=temp %>&#8457 </h1>
            </li>

            <%} %>
            <% if(typeof description !== 'undefined') { %>
            <li class="list-group-item">
              <h2>Today forecast: <%=description %></h2>
            </li>

            <%} %>

            <% if(typeof feels !== 'undefined') { %>
            <li class="list-group-item">
              <h3>Feels Like: <%=feels %></h3>
            </li>

            <%} %>
            <% if(typeof image !== 'undefined') { %>
            <li class="list-group-item">
              <img src="<%=image%>" alt="Weather image">
            </li>
            <li class="list-group-item">
              <form action="/result" method="post">
                <button class ="btn btn-lg btn-info type="submit" name="button">Search Again</button>
              </form>
            </li>
        </div>
        </ul>
      </div>

      <%} %>
    </div>
  </div>


</body>

</html>
